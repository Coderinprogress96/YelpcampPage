<%- include("../partials/header") %>
<div class="container">
    <h2>Create a New Campground</h2>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Campground Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Campground's Image URL">
        </div>
        <div class="form-group">
            <textarea class="form-control" type="text" name="description" placeholder="Campground's description"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary ">Submit</button>
        </div>
    </form>
    <a href="/" class="btn btn-primary btn-sm mr-1">Go Back To Landing Page !</a>
    <a href="/campgrounds" class="btn btn-primary btn-sm">Go Back To Campgrounds Page !</a>
</div>
<%- include("../partials/footer") %>